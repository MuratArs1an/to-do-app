<%- include('partials/_header') -%>
<div class="mx-auto pb-3 tm-about-text-container px-3">
    <div class="row">
        <div class="offset-2 col-lg-8 mb-5">
            <form method="POST" action="/blogs/<%= blog._id %>?_method=PUT" class="tm-contact-form"
                enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" name="title" value="<%= blog.name %>" class="form-control rounded-0"
                        placeholder="Photo Title" required />
                </div>

                <div class="form-group">
                    <textarea rows="8" name="description" class="form-control rounded-0"
                        placeholder="Photo Description" required><%= blog.status %></textarea>
                </div>
                <div class="form-group mb-0">
                    <button type="submit"
                        class="btn btn-primary rounded-0 d-block ml-auto mr-0 "><span>Update</span></button>
                </div>
            </form>
        </div>
    </div>
</div>