<%- include('partials/_header') -%>
<div class="mx-auto pb-3 tm-about-text-container px-3 mt-4">
    <div class="row">
        <div class="offset-2 col-lg-8 mb-5">
            <form method="post" action="/task/<%= task._id %>?_method=PUT" class="tm-contact-form"
                enctype="multipart/form-data">
                <div class="col-12">
                    <div class="form-outline " >
                            <input name="name" type="text"  class="form-control col-md-8" style="float:left" value="<%= task.name %>" />
                            <input name="status" type="text"  class="form-control col-md-4" value="<%= task.status %>" />
                        <label class="form-label" >Enter a task here</label>
                    </div>
                </div>
                <div class="form-group mb-0">
                    <button type="submit"
                        class="btn btn-primary rounded-0 d-block ml-auto mr-0 "><span>Update</span></button>
                </div>
            </form>
        </div>
    </div>
</div>